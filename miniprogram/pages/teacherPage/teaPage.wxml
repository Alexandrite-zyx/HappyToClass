<!--miniprogram/pages/teaPage/teaPage.wxml-->
<view class="today">
  <view class="info">
    <view class="temp">  {{today.wendu}}℃</view>
    <view class="weather">{{today.todayInfo.type}} {{today.todayInfo.fengxiang}}</view>
    <view >友情提示：{{today.ganmao}}</view>
    <view class="city">{{city}}</view>
  </view>
</view>

<van-cell size="large" is-link icon="bars" title="创建课程" bind:click="createCourse"/>

<van-cell size="large" is-link icon="setting" title="管理课程" bind:click="manageCourse"/>

<van-cell size="large" is-link icon="eye" title="我的信息"  bind:click="myPage"/>
